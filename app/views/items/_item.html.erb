<div class="card-body">
  <h3 class="card-title">Title: <%= item.title %></h3>
  <h3 class="card-title">Posted by: <%= item.user %></h3>
  <h3 class="card-title">Delivered by: <%= User.find(item.delivered_by).email if item.delivered_by%></h3>
  <h3 class="card-title">Bought by: <%= User.find(item.bought_by).email if item.bought_by%></h3>
  <p class="card-text text-left">Description: <%= item.description %></p>
  <%= image_tag(item.image.url, {class: "img-thumbnail item-image"}) %>
  <%= link_to "Deliver item", { :controller => :items , :action => :delivery }, {class: "btn btn-primary btn-lg col-sm-12 bg-secondary"} %>
  <% if current_user and item.delivered_by == current_user.id %>
    <%= link_to "UnDeliver item", { :controller => :items , :action => :delivery_refuse }, {class: "btn btn-primary btn-lg col-sm-12 bg-secondary"} %>
  <% end %>

  <%= link_to "Buy item", { :controller => :items , :action => :buy }, {class: "btn btn-primary btn-lg col-sm-12 bg-secondary"} %>
  <% if current_user and item.bought_by == current_user.id %>
    <%= link_to "UnBuy item", { :controller => :items , :action => :buy_refuse }, {class: "btn btn-primary btn-lg col-sm-12 bg-secondary"} %>
  <% end %>
  <!--<%= link_to "Back", items_path, :class => "btn btn-secondary" %> -->
</div>
